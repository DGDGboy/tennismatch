<h1><%= @user.name %></h1>

<%= cl_image_tag @user.photo, class="avatar-large" %>

<%= link_to "Back to all requests", root_path %>

<div class="row">
    <div class="col-sm-12 col-md-3">
      <h3>Request</h3>
      <table class="">
        <tbody>
          <thead>
            <th>Name</th>
            <th>Age</th>
            <th>Location</th>
            <th>Description</th>
            <th>Classement</th>
          </thead>
          <% @request.users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.age %></td>
              <td><%= user.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

<p>Find me in app/views/requests/show.html.erb</p>
