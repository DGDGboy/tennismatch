<h2>The most famous tennis player</h2>

<div class="card-container">

  <% @requests.each do |request| %>
    <div class="card">
        <%= image_tag "#{request.user.photo}", class: "card-avatar" %>
        <h2><%= request.user.first_name %></h2>
        <p>
          <i class="fas fa-map-marked-alt"></i>
          <strong><%= request.location %> </strong>
        </p>
        <p>
          <i class="far fa-calendar-alt"></i>
          <%= request.date %>
        </p>
        <p>
          <i class="far fa-clock text-center"></i>
          <%= request.time.strftime("%H:%M") %>
        </p>
        <div class="link"> <%= link_to "See more", request_path(request) %> </div>
    </div>
  <% end %>
</div>
